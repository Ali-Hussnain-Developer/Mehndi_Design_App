<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    tools:context=".ui.fragments.SingleDesignFragment">

    <include
        android:id="@+id/toolBarMehndiDesign"
        layout="@layout/toolbar_main_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp" />

    <ImageView
        android:id="@+id/imgSelectedDesign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_curve_layout"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSelectedDesign"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginHorizontal="@dimen/_5dp"
            android:src="@drawable/ic_baseline_share_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnFavourite"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_marginHorizontal="@dimen/_5dp"
            android:src="@drawable/ic_baseline_favorite_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</RelativeLayout>